{
  "version": "0.4.1",
  "name": "@mochi-inc-japan/class-fixtures-factory",
  "author": "tkow",
  "license": "MIT",
  "keywords": [
    "typescript",
    "class",
    "fixture",
    "factory",
    "generator",
    "entity",
    "fixtures"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mochi-inc-japan/class-fixtures-factory.git"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "rollup -c rollup.config.mjs --watch",
    "build": "rollup -c rollup.config.mjs ",
    "test": "jest",
    "lint": "eslint **/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix **/*.{js,jsx,ts,tsx}",
    "lint:ci": "npm run lint",
    "release:first": "standard-version --first-release",
    "release": "standard-version",
    "release:publish": "git push --follow-tags origin develop && yarn publish",
    "prepublish": "yarn build && pkg-ok",
    "docs:api": "api-extractor run --local --verbose && cd docs && api-documenter markdown"
  },
  "peerDependencies": {
    "class-validator": "0.11.1",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-transform-modules-commonjs": "^7.19.6",
    "@changesets/cli": "^2.25.2",
    "@microsoft/api-documenter": "^7.19.25",
    "@microsoft/api-extractor": "^7.33.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-typescript": "^10.0.1",
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "babel-jest": "^29.3.1",
    "class-validator": "0.11.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-tap-reporter": "^1.9.0",
    "lint-staged": "^10.0.8",
    "pkg-ok": "^3.0.0",
    "prettier": "^2.8.0",
    "rollup": "^3.6.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@plumier/reflect": "^1.0.6",
    "@types/treeify": "^1.0.0",
    "chalk": "4.1.2",
    "treeify": "^1.1.0",
    "tslib": "^2.4.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest-formatting/recommended"
    ],
    "ignorePatterns": [
      "node_modules/"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
